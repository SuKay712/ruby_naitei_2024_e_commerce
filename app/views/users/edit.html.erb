<% provide :title, t("edit.title") %>
<%= render "layouts/header" %>
<div class="edit-page">
  <h1><%= t "edit.title" %></h1>
  <div class="nav-link">
    <div class="nav-link-text">
      <i class="fa-solid fa-house"></i>
      <i class="right fa-solid fa-chevron-right"></i>
      <%= link_to t("profile.personal_info"), "#", class: "nav-link--selected" %>
    </div>
  </div>
  <div class="body">
    <div class="body__menu">
      <div class="title"><%= t "profile.personal_info" %></div>
      <div class="list">
        <div class="list__item selected_item">
          <%= link_to "#" do %>
            <i class="list__icon fa-solid fa-address-card"></i>
            <span><%= t "profile.account" %></span>
          <% end %>
        </div>
        <div class="list__item">
          <%= link_to "#" do %>
            <i class="list__icon fa-solid fa-wallet"></i>
            <span><%= t "profile.order_history" %></span>
          <% end %>
        </div>
        <div class="list__item">
          <%= link_to "#" do %>
            <i class="list__icon fa-solid fa-heart"></i>
            <span><%= t "profile.favorites" %></span>
          <% end %>
        </div>
        <div class="list__item">
          <%= link_to "#" do %>
            <i class="list__icon fa-solid fa-right-from-bracket"></i>
            <span><%= t "profile.logout" %></span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="formedit">
      <label for="" class="formedit__title"><%= t("profile.personal_info") %></label>
      <%= render "form" %>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>
