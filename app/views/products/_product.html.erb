<div class="collage-pic">
  <%= link_to product, class: "collage-info" do %>
    <% if product.image.persisted? %>
      <%= image_tag product.image, class: "collage-pic collage-pic_image" %>
      <p class= "center"><%= product.name %></p>
      <p><%= t "product.price", price: product.price %></p>
      <div class="collage-pic__star">
        <% average_rating = average_of_rating(product.comments) %>
        <% if average_rating.present? %>
          <% average_rating.times do %>
            <span class="fa fa-star checked"></span>
          <% end %>
          <% (Settings.max_rating_star - average_rating).times do %>
            <span class="fa fa-star"></span>
          <% end %>
        <% end %>
      </div>
      <button class="collage-pic__heart--hidden collage-pic__heart--visible"><i class="fa-solid fa-heart"></i></button>
      <button class="collage-pic__bag"><i class="fa-solid fa-bag-shopping"></i></button>
    <% end %>
  <% end %>
</div>
