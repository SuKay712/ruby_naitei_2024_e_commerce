<header>
  <div class="header__top">
    <div class="i18n">
      <%= link_to t("language.english"), locale: :en %>
      <hr>
      <%= link_to t("language.vietnamese"), locale: :vi %>
    </div>
    <% if logged_in? %>
      <li class="dropdown">
        <%= link_to "#", id: "account", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
          <%= t("static_pages.account") %><b class="caret"></b>
        <% end %>
        <ul id="dropdown-menu" class="dropdown-menu">
          <li><%= link_to t("static_pages.personal_info"), edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to t("profile.logout"), logout_path, data: { "turbo-method": :delete }  %></li>
        </ul>
      </li>
    <% else %>
      <div class="validation">
        <%= link_to t("sign_up.title"), signup_path, class: "validation__register" %>
        <hr>
        <%= link_to t("sessions.new.title"), login_path, class: "validation__login" %>
      </div>
    <% end %>
  </div>

  <div class="header__center">
    <%= link_to t("app_name"), root_path, class: "logo" %>

    <%= form_with url: "/search", class: "search-box", method: :get do |form| %>
      <%= form.text_field :search__input, placeholder: t("search_product") %>
      <button class="search-box__btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    <% end %>

    <div class="wishlist-cart">
      <%= link_to "#" do %>
        <i class="fa-regular fa-heart"></i>
      <% end %>
      <hr>
      <% if logged_in? %>
        <%= link_to cart_path(current_user) do %>
          <i class="fa-solid fa-cart-shopping"></i>
        <% end %>
      <% else %>
        <%= link_to login_path do %>
          <i class="fa-solid fa-cart-shopping"></i>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="navbar-new">
    <ul>
      <li>
        <%= link_to t("homepage.home"), root_path %>
      </li>
      <li>
        <%= link_to t("homepage.product"), products_path %>
      </li>
      <% if logged_in? && current_user.admin? %>
        <li>
          <%= link_to t("homepage.admin"), "#" %>
        </li>
      <% end %>
    </ul>

    <div class="phone">
      <i class="fa-solid fa-phone-volume phone__icon"></i>
      <span class="phone__number"><%= Settings.phone_number %></span>
    </div>
  </div>
</header>
